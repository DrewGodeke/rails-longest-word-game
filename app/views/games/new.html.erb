<h1>Longest Word Game</h1>

<!-- Display the random letters -->
<div class="letters">
  <h3>Random  Letters</h3>
  <% @letters.each do |letter| %>
    <span><%= letter %></span>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters.join(',') %>
  <p>What is the longest word you can find?</p>
  <%= text_field_tag :word %>
  <%= submit_tag "Play" %>
</form>
